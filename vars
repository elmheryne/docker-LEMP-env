alias 'blackfire-curl'='docker exec -it -e BLACKFIRE_CLIENT_ID=${BLACKFIRE_CLIENT_ID} -e BLACKFIRE_CLIENT_TOKEN={BLACKFIRE_CLIENT_TOKEN} blackfire/blackfire blackfire curl'
